<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#7E2C4D"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/inputText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:ems="10"
        android:inputType="number"
        android:textAlignment="textEnd"
        android:textAppearance="@style/TextAppearance.AppCompat.Display2"
        android:textColor="#FFFFFF"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

    <EditText
        android:id="@+id/outputText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:ems="10"
        android:inputType="number"
        android:textAlignment="textEnd"
        android:textAppearance="@style/TextAppearance.AppCompat.Display2"
        android:textColor="#FFFFFF"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/inputText" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="16dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/outputText">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_marginTop="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginBottom="8dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/ac_btn"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_marginRight="8dp"
                android:background="@drawable/round_button"
                android:text="AC"
                android:textSize="24sp"
                app:backgroundTint="@null" />

            <Button
                android:id="@+id/del_btn"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_marginRight="8dp"
                android:background="@drawable/round_button_warm"
                android:text="⇽"
                android:textSize="26sp"
                app:backgroundTint="@null" />

            <Button
                android:id="@+id/plusmin_btn"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_marginRight="8dp"
                android:background="@drawable/round_button_warm"
                android:text="+/_"
                android:textSize="22sp"
                app:backgroundTint="@null" />

            <Button
                android:id="@+id/bagi_btn"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_marginRight="8dp"
                android:background="@drawable/round_button_warm"
                android:text="÷"
                android:textSize="22sp"
                app:backgroundTint="@null" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/tutjuh_btn"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_marginRight="8dp"
                android:background="@drawable/squircle_button"
                android:text="7"
                android:textSize="24sp"
                app:backgroundTint="@null" />

            <Button
                android:id="@+id/lapan_btn"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_marginRight="8dp"
                android:background="@drawable/squircle_button"
                android:text="8"
                android:textSize="24sp"
                app:backgroundTint="@null" />

            <Button
                android:id="@+id/semb_btn"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_marginRight="8dp"
                android:background="@drawable/squircle_button"
                android:text="9"
                android:textSize="24sp"
                app:backgroundTint="@null" />

            <Button
                android:id="@+id/kali_btn"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_marginRight="8dp"
                android:background="@drawable/round_button_warm"
                android:text="×"
                android:textSize="22sp"
                app:backgroundTint="@null" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/empat_btn"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_marginRight="8dp"
                android:background="@drawable/squircle_button"
                android:text="4"
                android:textSize="24sp"
                app:backgroundTint="@null" />

            <Button
                android:id="@+id/lima_btn"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_marginRight="8dp"
                android:background="@drawable/squircle_button"
                android:text="5"
                android:textSize="24sp"
                app:backgroundTint="@null" />

            <Button
                android:id="@+id/enam_btn"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_marginRight="8dp"
                android:background="@drawable/squircle_button"
                android:text="6"
                android:textSize="24sp"
                app:backgroundTint="@null" />

            <Button
                android:id="@+id/kurang_btn"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_marginRight="8dp"
                android:background="@drawable/round_button_warm"
                android:text="-"
                android:textSize="22sp"
                app:backgroundTint="@null" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/satu_btn"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_marginRight="8dp"
                android:background="@drawable/squircle_button"
                android:text="1"
                android:textSize="24sp"
                app:backgroundTint="@null" />

            <Button
                android:id="@+id/dua_btn"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_marginRight="8dp"
                android:background="@drawable/squircle_button"
                android:text="2"
                android:textSize="24sp"
                app:backgroundTint="@null" />

            <Button
                android:id="@+id/tiga_btn"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_marginRight="8dp"
                android:background="@drawable/squircle_button"
                android:text="3"
                android:textSize="24sp"
                app:backgroundTint="@null" />

            <Button
                android:id="@+id/tambah_btn"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_marginRight="8dp"
                android:background="@drawable/round_button_warm"
                android:text="+"
                android:textSize="22sp"
                app:backgroundTint="@null" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/persen_btn"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_marginRight="8dp"
                android:background="@drawable/squircle_button"
                android:text="%"
                android:textSize="24sp"
                app:backgroundTint="@null" />

            <Button
                android:id="@+id/nol_btn"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_marginRight="8dp"
                android:background="@drawable/squircle_button"
                android:text="0"
                android:textSize="24sp"
                app:backgroundTint="@null" />

            <Button
                android:id="@+id/koma_btn"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_marginRight="8dp"
                android:background="@drawable/squircle_button"
                android:text="•"
                android:textSize="24sp"
                app:backgroundTint="@null" />

            <Button
                android:id="@+id/hasil_btn"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_marginRight="8dp"
                android:background="@drawable/round_button_warm"
                android:text="="
                android:textSize="22sp"
                app:backgroundTint="@null" />
        </LinearLayout>

    </LinearLayout>

    <TextView
        android:id="@+id/textView2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="16dp"
        android:text="Calculator"
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
        android:textColor="#FFFFFF"
        android:textSize="45sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>